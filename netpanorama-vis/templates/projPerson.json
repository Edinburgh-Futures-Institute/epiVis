{
  "pan": true,
  "zoom": true,
  "width": "[width]",
  "height": "[height]",
  "data": [
    {
      "name": "data",
      "url": "./data/[filename]",
      "format": {
        "type": "csv"
      }
    },
    {
      "name": "authors",
      "url": "./data/[authorsFilename]",
      "format": {
        "type": "csv"
      }
    }
  ],

  "parameters": [
    {
      "name": "node_selection",
      "network": "network",
      "type": "selection",
      "action": "replace",
      "clearOnBackgroundClick": true
    },
    {
      "name": "neighbours",
      "source": "node_selection",
      "transform": [
        {
          "type": "neighbours",
          "direction": "both"
        }
      ]
    },
    {
      "name": "timeRange",
      "value": [
        0,
        0
      ]
    }
  ],

  "networks": [
    {
      "name": "network",
      "parts": [
        {
          "data": "data",
          "yieldsNodes": [
            {
              "id_field": "Epic Code ",
              "type": "Paper",
              "data": []
            }
          ],
          "yieldsLinks": [
          ]
        },
        {
          "data": "authors",
          "yieldsNodes": [
          ],
          "yieldsLinks": [
            {
              "source_id": {
                "field": "Paper associated "
              },
              "source_node_type": "Paper",
              "source_id_field": "id",
              "target_id": {
                "field": "Author"
              },
              "target_node_type": "Person",
              "target_id_field": "id",
              "data": []
            },
            {
              "source_id": {
                "field": "Afilliation name 1"
              },
              "source_node_type": "Institution",
              "source_id_field": "id",
              "target_id": {
                "field": "Author"
              },
              "target_node_type": "Person",
              "target_id_field": "id",
              "data": []
            }
          ]
        }
      ],
      "transform": [
        {"type": "filterNodes", "expression": "datum.id !== '' "},
              {"type": "filterNodes", "expression": "datum.id !== ' ' "},
              {"type": "filterNodes", "expression": "datum.id !== 'not specified' "},
        {
          "type": "project",
          "fieldName": "_type",
          "remainingNodeType": "Person",
          "removedNodeType": "Paper",
          "directed": false
        },
        {
          "type": "metric",
          "metric": "degree"
        }
      ]
    }
  ],
  "layouts": [
    {
      "name": "forcelayout",
      "network": "network",
      "type": "webcola",
      "defaultNodeSize22": 1,
      "linkDistance": 400,
      "handleDisconnected": true,
      "avoidOverlap": true
    }
  ],
  "scales": [
    {
      "name": "radius",
      "type": "linear",
      "range": [
        50,
        900
      ],
      "domain": {
        "data": "network.nodes",
        "field": "degree"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": [
        "lightblue",
        "lightgreen",
        "red",
        "purple",
        "orange"
      ],
      "domain": [
        "Person",
        "Paper",
        "Strain",
        "Wave",
        "Institution"
      ]
    },
    {
      "name": "shapeScale",
      "type": "ordinal",
      "range": [
        "circle",
        "square",
        "diamond",
        "triangle",
        "cross"
      ],
      "domain": [
        "Person",
        "Paper",
        "Strain",
        "Wave",
        "Institution"
      ]
    }
  ],
  "vis": [
    {
      "entries": "network.links",
      "layout": "forcelayout",
      "mark": {
        "type": "linkpath",
        "start": "source",
        "end": "target",
       "stroke": "gray",
        "opacity":  {
          "conditions": [
            {
              "selectionIsEmpty": "node_selection.nodes",
              "value": 1
            },
            {
              "inSelection": "neighbours.links",
              "value": 1
            }
          ],
          "value": 0.2
        }
      }
    },
    {
      "entries": "network.nodes",
      "layout": "forcelayout",
      "occlusion": true,
      "mark": {
        "type": "text",
        "text": {
          "conditions": [
            {
              "selectionIsEmpty": "node_selection.nodes",
              "value": {
                "expression": "datum.id"
              }
            },
            {
              "inSelection": "node_selection.nodes",
              "value": {
                "expression": "datum.id"
              }
            }
          ],
          "value": ""
        },
        "dx": 10,
        "dy": 6,
        "fontSize": 14,
        "stroke": "white",
        "fontWeight": "bold",
        "strokeWidth": 0.5
      }
    },
    {
      "entries": "network.nodes",
      "layout": "forcelayout",
      "actions": [
        {
          "interaction": "select",
          "using": "cursor",
          "event": "mouseover",
          "action": "replace",
          "selection": "node_selection"
        },
        {
          "interaction": "select",
          "using": "cursor",
          "event": "mouseout",
          "action": "remove",
          "selection": "node_selection"
        }
      ],
      "mark": {
        "type": "symbol",
        "shape": {
          "field": "_type",
          "scale": "shapeScale"
        },
        "size": {
          "field": "degree",
          "scale": "radius"
        },
        "fill": {
          "field": "_type",
          "scale": "color"
        },
        "tooltip": {
          "expression": "datum.id + ' (degree ' + datum.degree + ')' "
        },
        "opacity": {
          "conditions": [
            {
              "selectionIsEmpty": "node_selection.nodes",
              "value": 1
            },
            {
              "inSelection": "node_selection.nodes",
              "value": 1
            },
            {
              "inSelection": "neighbours.nodes",
              "value": 1
            }
          ],
          "value": 0.3
        }
      }
    }
  ]
}