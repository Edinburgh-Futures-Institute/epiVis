{
  "data": [
    {
      "name": "data",
      "url": "./data/[filename]",
      "format": {
        "type": "csv"
      }
    }
  ],
  "networks": [
    {
      "name": "network",
      "parts": [
        {
          "data": "data",
          "yieldsNodes": [
            {
              "id_field": "Epic Code ",
              "type": "Paper",
              "data": []
            },
            {
              "id_field": "Methodology Influenced by",
              "type": "Paper",
              "data": []
            }
          ],
          "yieldsLinks": [
            {
              "source_id": {
                "field": "Epic Code "
              },
              "source_node_type": "Paper",
              "target_id": {
                "field": "Methodology Influenced by"
              },
              "target_node_type": "Paper",
              "data": []
            }
          ]
        }
      ],
      "transform": [
        {
          "type": "metric",
          "metric": "degree"
        }
      ]
    }
  ],
  "layouts": [
    {
      "name": "forcelayout",
      "network": "network",
      "type": "d3-force"
    }
  ],
  "scales": [
    {
      "name": "radius",
      "type": "linear",
      "range": [
        90,
        250
      ],
      "domain": {
        "data": "network.nodes",
        "field": "degree"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": [
        "lightblue",
        "lightgreen",
        "red",
        "purple",
        "orange"
      ],
      "domain": [
        "Person",
        "Paper",
        "Strain",
        "Wave",
        "Institution"
      ]
    },
    {
      "name": "shapeScale",
      "type": "ordinal",
      "range": [
        "circle",
        "square",
        "diamond",
        "triangle",
        "cross"
      ],
      "domain": [
        "Person",
        "Paper",
        "Strain",
        "Wave",
        "Institution"
      ]
    }
  ],
  "vis": [
    {
      "entries": "network.links",
      "layout": "forcelayout",
      "mark": {
        "type": "linkpath",
        "start": "source",
        "end": "target",
       "stroke": "gray"
      }
    },
    {
      "entries": "network.nodes",
      "layout": "forcelayout",
      "mark": {
        "type": "symbol",
        "shape": {
          "field": "_type",
          "scale": "shapeScale"
        },
        "size": {
          "field": "degree",
          "scale": "radius"
        },
        "fill": {
          "field": "_type",
          "scale": "color"
        },
        "tooltip": {
          "expression": "datum.id + ' (degree ' + datum.degree + ')' "
        }
      }
    }
  ]
}