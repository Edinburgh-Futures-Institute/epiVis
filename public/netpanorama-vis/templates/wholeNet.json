{
  "width": "[width]",
  "height": "[height]",
  "data": [
    {
      "name": "data",
      "url": "./data/[filename]",
      "format": {
        "type": "csv"
      }
    },
    {
      "name": "authors",
      "url": "./data/[authorsFilename]",
      "format": {
        "type": "csv"
      }
    },
    {
      "name": "strainWave",
      "values": "[strainWavesLinks]"
    },
    {
      "name": "wavePaper",
      "values": "[wavePapersLinks]"
    },
    {
      "name": "waveCountry",
      "values": "[waveCountryLinks]"
    },
    {
      "name": "modelPaper",
      "values": "[modelPapersLinks]"
    }
  ],
  "parameters": [
    {
      "name": "node_selection",
      "network": "network",
      "type": "selection",
      "action": "replace",
      "clearOnBackgroundClick": true
    },
    {
      "name": "neighbours",
      "source": "node_selection",
      "transform": [
        {
          "type": "neighbours",
          "direction": "both"
        }
      ]
    },
    {
      "name": "timeRange",
      "value": [
        0,
        0
      ]
    }
  ],
  "networks": [
    {
      "name": "network",
      "parts": [
        {
          "data": "data",
          "yieldsNodes": [
            {
              "id_field": "Epic Code ",
              "type": "Paper",
              "data": []
            }
          ],
          "yieldsLinks": [
          ]
        },
        {
          "data": "authors",
          "yieldsNodes": [
          ],
          "yieldsLinks": [
            {
              "source_id": {
                "field": "Paper associated "
              },
              "source_node_type": "Paper",
              "source_id_field": "id",
              "target_id": {
                "field": "Author"
              },
              "target_node_type": "Person",
              "target_id_field": "id",
              "data": []
            },
            {
              "source_id": {
                "field": "Afilliation name 1"
              },
              "source_node_type": "Institution",
              "source_id_field": "id",
              "target_id": {
                "field": "Author"
              },
              "target_node_type": "Person",
              "target_id_field": "id",
              "data": []
            }
          ]
        },
        {
          "data": "strainWave",
          "yieldsNodes": [
          ],
          "yieldsLinks": [
            {
              "source_id": {
                "field": "Strain"
              },
              "source_node_type": "Strain",
              "source_id_field": "id",
              "target_id": {
                "field": "Wave"
              },
              "target_node_type": "Wave",
              "target_id_field": "id",
              "data": []
            }
          ]
        },
        {
          "data": "wavePaper",
          "yieldsNodes": [
          ],
          "yieldsLinks": [
            {
              "source_id": {
                "field": "Wave"
              },
              "source_node_type": "Wave",
              "source_id_field": "id",
              "target_id": {
                "field": "Paper"
              },
              "target_node_type": "Paper",
              "target_id_field": "id",
              "data": []
            }
          ]
        },
        {
          "data": "waveCountry",
          "yieldsNodes": [
          ],
          "yieldsLinks": [
            {
              "source_id": {
                "field": "Wave"
              },
              "source_node_type": "Wave",
              "source_id_field": "id",
              "target_id": {
                "field": "Country"
              },
              "target_node_type": "Country",
              "target_id_field": "id",
              "data": []
            }
          ]
        },
        {
          "data": "modelPaper",
          "yieldsNodes": [
          ],
          "yieldsLinks": [
            {
              "source_id": {
                "field": "Paper"
              },
              "source_node_type": "Paper",
              "source_id_field": "id",
              "target_id": {
                "field": "Model"
              },
              "target_node_type": "Model",
              "target_id_field": "id",
              "data": []
            }
          ]
        }
      ],
      "transform": [
        {
          "type": "filterNodes",
          "expression": "datum.id !== '' "
        },
        {
          "type": "filterNodes",
          "expression": "datum.id !== ' ' "
        },
        {
          "type": "filterNodes",
          "expression": "datum.id !== 'not specified' "
        },
        {
          "type": "metric",
          "metric": "degree"
        }
      ]
    }
  ],
  "layouts": [
    {
      "name": "forcelayout",
      "network": "network",
      "type": "webcola",
      "defaultNodeSize22": 1,
      "linkDistance": 12,
      "handleDisconnected": true,
      "avoidOverlap": true
    },
    {
      "name": "forcelayout2",
      "network": "network",
      "type": "d3-force"
    }
  ],
  "scales": [
    {
      "name": "radius",
      "type": "linear",
      "range": [
        90,
        250
      ],
      "domain": {
        "data": "network.nodes",
        "field": "degree"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": [
        "lightblue",
        "lightgreen",
        "red",
        "purple",
        "orange",
        "brown",
        "yellow"
      ],
      "domain": [
        "Person",
        "Paper",
        "Strain",
        "Wave",
        "Institution",
        "Country",
        "Model"
      ]
    },
    {
      "name": "shapeScale",
      "type": "ordinal",
      "range": [
        "circle",
        "square",
        "diamond",
        "triangle",
        "cross",
        "triangle-down",
        "M0,.5L.6,.8L.5,.1L1,-.3L.3,-.4L0,-1L-.3,-.4L-1,-.3L-.5,.1L-.6,.8L0,.5Z"
      ],
      "domain": [
        "Person",
        "Paper",
        "Strain",
        "Wave",
        "Institution",
        "Country",
        "Model"
      ]
    }
  ],
  "vis": [
    {
      "entries": "network.links",
      "layout": "forcelayout",
      "mark": {
        "type": "linkpath",
        "start": "source",
        "end": "target",
        "stroke": "gray"
      }
    },
    {
      "entries": "network.nodes",
      "layout": "forcelayout",
      "actions": [
        {
          "interaction": "select",
          "using": "cursor",
          "event": "mouseover",
          "action": "replace",
          "selection": "node_selection"
        },
        {
          "interaction": "select",
          "using": "cursor",
          "event": "mouseout",
          "action": "remove",
          "selection": "node_selection"
        }
      ],
      "mark": {
        "type": "symbol",
        "shape": {
          "field": "_type",
          "scale": "shapeScale"
        },
        "size": {
          "field": "degree",
          "scale": "radius"
        },
        "fill": {
          "field": "_type",
          "scale": "color"
        },
        "stroke": ""[strokeColor]"",
        "tooltip": {
          "expression": "datum.id + ' (degree ' + datum.degree + ')' "
        },
        "opacity": {
          "conditions": [
            {
              "selectionIsEmpty": "node_selection.nodes",
              "value": 1
            },
            {
              "inSelection": "node_selection.nodes",
              "value": 1
            },
            {
              "inSelection": "neighbours.nodes",
              "value": 1
            }
          ],
          "value": 0.3
        }
      }
    },

    {
      "entries": "network.nodes",
      "layout": "forcelayout",
      "mark": {
        "type": "text",
        "text": {
          "conditions": [
            {
              "test": "datum._type == 'Strain'",
              "value": {
                "field": "id"
              }
            },
            {
              "inSelection": "node_selection.nodes",
              "value": {
                "expression": "datum.id"
              }
            }
          ],
          "value": ""
        },
        "dx": 6,
        "dy": 6,
        "fontSize": 14,
        "stroke": "white",
        "fontWeight": "bold",
        "strokeWidth": 0.5
      }
    }


  ]
}